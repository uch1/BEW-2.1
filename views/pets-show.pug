extends layout

block content
  .row
    .col-sm-4
      if pet.avatarUrl
        img.card-img-top(src=pet.avatarUrl + '-standard.', alt='Card image cap').img-fluid
      else 
        img.card-img-top(src=pet.picUrlSq, alt='Card image cap')
    .col-sm-8
      h1=pet.name
      p=pet.species
      p Born on #{pet.birthday}
      p=pet.description
      .text-right
        a(href="/pets/" + pet.id + "/edit").btn-link Edit
      
